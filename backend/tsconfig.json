{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": "./src",
    "resolveJsonModule": true /* in case you are importing JSON files */,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,

    "baseUrl": "./src",
    "paths": {
      "@base/*": ["base/*"],
      "@src/*": ["*"]
    }
  },

  "include": [
    "src/**/*",
    "src/services/Email/Services/nodemailer-mailgun-transport.d.ts",
    "__tests__/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
